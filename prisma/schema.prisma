generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ChatType {
  DM
  LIVESTREAM
}

enum NotificationType {
  LIVESTREAM
  PODCAST
  GENERAL
}

enum MessageType {
  TEXT
  IMAGE
  VIDEO
  FILE
}

model User {
  id              Int       @id @default(autoincrement())
  identifier      String    @unique
  firstName       String
  lastName        String
  email           String    @unique
  password        String
  isVerified      Boolean   @default(false)
  emailVerifiedAt DateTime?
  googleId        String?   @unique
  picture         String?

  liveStreams      LiveStream[]
  videos           Video[]
  podcasts         PodCast[]
  sentMessages     Message[]          @relation("MessageSender")
  chatParticipants ChatParticipant[]
  notifications    Notification[]
  liveStreamViewer LiveStreamViewer[]
  listener         Listener[]

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([email])
}

model LiveStream {
  id         Int       @id @default(autoincrement())
  identifier String    @unique
  title      String
  isLive     Boolean   @default(false)
  startTime  DateTime? // Actual start time (when user goes live)
  endTime    DateTime?

  userId   Int
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[] @relation("LiveStreamMessages")

  recordedVideoId  Int?               @unique
  recordedVideo    Video?             @relation("StreamRecording", fields: [recordedVideoId], references: [id])
  notifications    Notification[]
  liveStreamViewer LiveStreamViewer[]

  streamKey   String? @unique
  playbackUrl String?

  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt

  @@index([userId])
  @@index([isLive])
}

model LiveStreamViewer {
  id           Int      @id @default(autoincrement())
  identifier   String   @unique
  liveStreamId Int
  userId       Int?
  sessionId    String?
  joinedAt     DateTime @default(now())

  liveStream    LiveStream      @relation(fields: [liveStreamId], references: [id], onDelete: Cascade)
  user          User?           @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([liveStreamId, userId])
  @@unique([liveStreamId, sessionId])
  @@index([liveStreamId])
  @@index([userId])
  @@index([joinedAt])
}


model Video {
  id           Int     @id @default(autoincrement())
  identifier   String  @unique
  title        String
  videoUrl     String
  thumbnailUrl String?
  duration     Int? // in seconds
  isRecording  Boolean @default(false) // Is this from a live stream?

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Reverse relation for recorded streams
  sourceStream LiveStream? @relation("StreamRecording")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([isRecording])
}

model PodCast {
  id            Int            @id @default(autoincrement())
  identifier    String         @unique
  title         String
  description   String?
  picture       String?
  audioUrl      String
  thumbnailUrl  String?
  duration      Int? // in seconds
  date          DateTime
  userId        Int
  user          User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  notifications Notification[]
  listener      Listener[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model Listener {
  id         Int      @id @default(autoincrement())
  identifier String   @unique
  podcastId  Int
  userId     Int?
  sessionId  String?
  joinedAt   DateTime @default(now())

  podcast PodCast @relation(fields: [podcastId], references: [id], onDelete: Cascade)
  user    User?   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([podcastId, userId])
  @@unique([podcastId, sessionId])
  @@index([podcastId])
  @@index([userId])
}

model Chat {
  id            Int               @id @default(autoincrement())
  identifier    String            @unique
  type          ChatType          @default(DM)
  liveStreamId  Int?
  messages      Message[]
  participants  ChatParticipant[]
  notifications Notification[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ChatParticipant {
  id     Int @id @default(autoincrement())
  chatId Int
  userId Int

  chat     Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  joinedAt DateTime @default(now())

  @@unique([chatId, userId])
  @@index([userId])
}

model Message {
  id         Int    @id @default(autoincrement())
  identifier String @unique
  content    String
  senderId   Int
  sender     User   @relation("MessageSender", fields: [senderId], references: [id], onDelete: Cascade)
  chatId     Int?

  chat         Chat? @relation(fields: [chatId], references: [id], onDelete: Cascade)
  liveStreamId Int?

  liveStream LiveStream? @relation("LiveStreamMessages", fields: [liveStreamId], references: [id], onDelete: Cascade)
  isRead     Boolean     @default(false)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@index([chatId])
  @@index([liveStreamId])
  @@index([senderId])
}

model Notification {
  id         Int    @id @default(autoincrement())
  identifier String @unique

  title       String
  description String
  type        NotificationType @default(GENERAL)
  isRead      Boolean          @default(false)

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  liveStreamId Int?
  liveStream   LiveStream? @relation(fields: [liveStreamId], references: [id], onDelete: Cascade)

  podcastId Int?
  podcast   PodCast? @relation(fields: [podcastId], references: [id], onDelete: Cascade)

  chatId Int?
  chat   Chat? @relation(fields: [chatId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([liveStreamId])
  @@index([podcastId])
  @@index([chatId])
}
