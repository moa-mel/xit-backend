generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  identifier String  @unique
  firstName String
  lastName  String
  email     String   @unique
  password  String

  isVerified      Boolean @default(false)
  emailVerifiedAt DateTime?

  googleId         String?   @unique 
  picture          String?   
  
  createdAt DateTime @default(now())
}